{
  "name": "@flexbase/action-artifact-cleanup",
  "version": "1.0.0",
  "description": "Github Action to periodically clean up old artifacts",
  "main": "output/index.js",
  "author": "Flexbase",
  "license": "MIT",
  "homepage": "https://github.com/flexbase-eng/action-artifact-cleanup",
  "repository": {
    "type": "git",
    "url": "git@github.com:flexbase-eng/action-artifact-cleanup.git"
  },
  "bugs": {
    "url": "https://github.com/flexbase-eng/action-artifact-cleanup/issues"
  },
  "keywords": [
    "flexbase"
  ],
  "private": true,
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/luxon": "^2.3.2",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vercel/ncc": "^0.34.0",
    "esbuild": "^0.14.47",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.0",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "tsconfig.json": "^1.0.11",
    "typescript": "^4.7.3"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "docs": "typedoc",
    "prepare": "yarn run build",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --no-cache",
    "lint": "eslint 'src/**/*.{ts,tsx,json}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,md,json}'",
    "start": "node ./dist/index.js",
    "all": "yarn build && yarn package && yarn start > output.txt"
  },
  "dependencies": {
    "@actions/artifact": "^1.1.0",
    "@actions/core": "^1.9.0",
    "@octokit/plugin-rest-endpoint-methods": "^6.1.0",
    "@octokit/plugin-throttling": "^4.1.0",
    "luxon": "^3.0.1",
    "octokit": "^2.0.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tests/tsconfig.tests.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleDirectories": [
      "<rootDir>/src/",
      "<rootDir>/tests/",
      "node_modules"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 200
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-non-null-assertion": "warn",
      "@typescript-eslint/no-inferrable-types": "off"
    },
    "env": {
      "browser": true,
      "es2021": true
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage",
    "docs",
    "tests"
  ]
}
